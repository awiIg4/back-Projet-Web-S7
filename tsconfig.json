{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", "./types"],
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules"]
}